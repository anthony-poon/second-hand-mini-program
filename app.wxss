@import '/lib/weui.wxss';

/**app.wxss**/
.page {
  background-color: #f8f8f8;
  font-size: 16px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.page__hd {
  padding: 20px;
}

.page__bd {
  padding-bottom: 40px;
}

.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.page__ft {
  padding-bottom: 10px;
  text-align: center;
}

.page__title {
  text-align: center;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: #888;
  text-align: left;
  font-size: 14px;
}

.menu-item {
  width: 33%;
  float: left;
  /* border-right: 1px solid rgb(200, 200, 200); */
  text-align: center;
  padding-top: 5px;
  font-size: 25rpx;
}

.menu-item2{
  border-right:none;
}

.tabBar-img {
  width: 23px;
  height: 23px;
  display: block;
  margin: auto;
}

.clear {
  clear: both;
}

.tab-bar {
  background-color:rgb(243, 243, 243);
  /* opacity: .8; */
  position: fixed;
  width: 100%;
  /* padding: 0px 2%; */
}